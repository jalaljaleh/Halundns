<Application x:Class="Halun.HalunDns.Windows.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Halun.HalunDns.Windows"
             StartupUri="MainWindow.xaml">

    <Application.Resources>


        <ResourceDictionary>
            
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/Buttons/Modern.xaml"/>
                <ResourceDictionary Source="/Styles/DataGrid/Modern.xaml"/>
                <ResourceDictionary Source="/Styles/MenuBar/Modern.xaml"/>
                <ResourceDictionary Source="/Styles/TextBox/Modern.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters used across the app -->
            <local:NullToBooleanConverter x:Key="NullToBooleanConverter" />
            <local:InverseBooleanConverter x:Key="InverseBooleanConverter" />

        </ResourceDictionary>

    </Application.Resources>

</Application>
