<Window x:Class="Halun.HalunDns.Windows.DnsServerWindow" 
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:tb="http://www.hardcodet.net/taskbar"   
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework" 
        mc:Ignorable="av" 
        Title="Dns Editor" WindowStartupLocation="CenterScreen" Foreground="#E5E5E7" FontFamily="Segoe UI" BorderBrush="Black" Icon="/dns.ico" WindowStyle="None" BorderThickness="1" AllowsTransparency="True" ResizeMode="CanResizeWithGrip" Topmost="True" ShowInTaskbar="False"
        MinWidth="400" MinHeight="420" Width="500" Height="420" Background="{x:Null}">


    <Grid x:Name="WindowG">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="49"/>
            <RowDefinition/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <Border x:Name="TitleBorder" Grid.Row="0" WindowChrome.IsHitTestVisibleInChrome="False">
            <Border.Background>
                <SolidColorBrush Color="#FF131313" Opacity="0.95"/>
            </Border.Background>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="69"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="6,0,6,0" Height="40">
                    <Image Width="25" Height="30" Margin="0,0,8,0" Source="{Binding PathIcon}" />
                    <TextBlock Visibility="Visible" Text="{Binding Title, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" VerticalAlignment="Center" FontWeight="SemiBold"/>

                </StackPanel>
                <StackPanel x:Name="Btns" Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Height="35" Margin="13,0,8,0">

                    <Button x:Name="btnClose" Height="35" Width="40" Style="{StaticResource ModernSoftButton}" WindowChrome.IsHitTestVisibleInChrome="True" Background="{x:Null}" BorderBrush="{x:Null}">
                        <Path Data="M0,0 L10,10 M10,0 L0,10" Stroke="#E5E5E7" StrokeThickness="1.6" Width="12" Height="12"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        <Grid x:Name="Body"  Grid.Row="1">
            <Grid.Background>
                <SolidColorBrush Color="#FF131313" Opacity="0.95"/>
            </Grid.Background>

            <StackPanel Margin="20" Orientation="Vertical">

                <TextBox x:Name="InputName" Margin="20,0" Tag="Name" Style="{StaticResource ModernDarkTextBox}" TextWrapping="Wrap" Background="#FF0E0E0E" BorderBrush="#FF101012" Height="45"/>

                <Grid Margin="20,10" Height="45" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="InputDnsAddress" Tag="Primary Address" Style="{StaticResource ModernDarkTextBox}" TextWrapping="Wrap" Background="#FF0E0E0E" BorderBrush="#FF101012" Grid.Column="1" Margin="10,0,0,0"/>
                    <TextBox x:Name="InputDnsAddressAlt" Tag="Alt Address" Style="{StaticResource ModernDarkTextBox}" TextWrapping="Wrap" Background="#FF0E0E0E" BorderBrush="#FF101012" Margin="0,0,10,0"/>
                </Grid>

                <Grid Margin="20,10" Height="46" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="InputPriority" Tag="Priority" Style="{StaticResource ModernDarkTextBox}" TextWrapping="Wrap" Background="#FF0E0E0E" BorderBrush="#FF101012" Grid.Column="1" Margin="10,0,0,0"/>
                    <TextBox x:Name="InputType" Tag="Dns Type" Style="{StaticResource ModernDarkTextBox}" TextWrapping="Wrap" Background="#FF0E0E0E" BorderBrush="#FF101012" Margin="0,0,10,0"/>
                </Grid>

                <TextBox x:Name="InputDescription" Height="100" Margin="20,0" Tag="Description" Style="{StaticResource ModernDarkTextBox}" TextWrapping="Wrap" Background="#FF0E0E0E" BorderBrush="#FF101012"/>

            </StackPanel>

        </Grid>
        <Grid Grid.Row="2">
            <Grid.Background>
                <SolidColorBrush Color="#FF131313" Opacity="0.95"/>
            </Grid.Background>
            <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft" VerticalAlignment="Center" Margin="20,0,20,0">
                <Button x:Name="btnConfirm" Style="{StaticResource ModernSoftButton}" Content="Confirm" Width="142" Background="#FF00517B" Foreground="White" BorderBrush="{x:Null}" Height="42"/>
                <Button x:Name="btnCancel"  Style="{StaticResource ModernSoftButton}" Margin="10" Content="Cancel" Width="92" Background="#FF0D0D0D" Foreground="#FFB9B9B9" BorderBrush="{x:Null}" Height="39"/>
            </StackPanel>



        </Grid>


    </Grid>


</Window>